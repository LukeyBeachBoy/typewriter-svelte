{
	"include": ["src/**/*", "webpack.config.ts, node_modules/typewriter-editor/lib/*.svelte"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2017",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": false,
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"]
		},
		"types": [
			"node",
			"svelte",
			"svelte/store",
			"svelte/motion",
			"svelte/transition",
			"svelte/animate",
			"svelte/easing",
			"typescript"
		]
	}
}
